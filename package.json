{
  "name": "state-comparison",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:context": "turbo run dev --filter=context-app",
    "dev:zustand": "turbo run dev --filter=zustand-app",
    "lint": "turbo run lint",
